@import 'nib'

a, a:link
	cursor pointer

.navbar a
	font-family: "News Cycle", "Arial Narrow Bold", sans-serif
	font-weight: 500

body
	padding-top 60px

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

h1, h2, h3
	font-weight 300

h4, h5, h6
	font-weight 700

h1 
	font-size 64px

span.five-star
	display block
	margin: 20px 0

a.learn-more
	display: block
	width: 200px
	margin: 0 auto
	padding: 20px 10px
	border-radius: 5px
	text-align: center
	color: cornflowerblue
	border: 1px solid cornflowerblue
	font-family: "News Cycle", "Arial Narrow Bold", sans-serif
	font-weight: 300
	font-size: 24px
	&:hover
		text-decoration: none
		background-color: cornflowerblue
		color: white

footer
	clear both
